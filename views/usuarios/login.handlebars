<div class="card">
  <div class="card-body">
    <form action="/usuarios/login" method="post">
      <label for="email">Email:</label>
      <input
        type="email"
        name="email"
        required
        placeholder="Digite seu email"
        class="form-control"
      />
      <label for="senha">Senha: </label>
      <input
        type="password"
        name="senha"
        required
        placeholder="Digite sua senha"
        class="form-control"
      />
      <button class="btn btn-success mt-4">Entrar</button>
    </form>
  </div>
</div>